<Window x:Class="Charity2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Charity2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>

        <Image x:Name="imgBackground" HorizontalAlignment="Left" Height="334" VerticalAlignment="Center" Width="536" Source="/Charity-job-opportunities-in-Belfast-300x200.jpg" Opacity="0.1" Margin="-18,0,0,0"/>
        <Button x:Name="btnEnter" Content="Enter" HorizontalAlignment="Center" Margin="0,244,0,0" VerticalAlignment="Top" FontSize="24" Click="GoToOptions"/>
        <TextBlock x:Name="txbWelcome" HorizontalAlignment="Center" Height="35" Margin="0,82,0,0" TextWrapping="Wrap" Text="Welcome!! " VerticalAlignment="Top" Width="105" FontSize="20"/>
        <TextBlock x:Name="txbBusinessName" HorizontalAlignment="Center" Height="34" TextWrapping="Wrap" Text="Employment Help Service" VerticalAlignment="Center" Background="#FFF2E4E4" Width="271" FontSize="24"/>

    </Grid>
</Window>
